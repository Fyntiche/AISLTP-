@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm( "LogOff" , "Account" , FormMethod.Post , new { id = "logoutForm" , @class = "navbar-collapse" } ))
    {
        @Html.AntiForgeryToken()

        @Html.ActionLink( User.Identity.GetUserName() , "Index" , "Manage" , routeValues: null , htmlAttributes: new { title = "Manage" } )
        <a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>

    }

}
else
{
    <li>@Html.ActionLink( "Регистрация" , "Register" , "Account" , routeValues: null , htmlAttributes: new { id = "registerLink" } )</li>
    <li>@Html.ActionLink( "Вход" , "Login" , "Account" , routeValues: null , htmlAttributes: new { id = "loginLink" } )</li>
    @:&nbsp;
    @:&nbsp;
}